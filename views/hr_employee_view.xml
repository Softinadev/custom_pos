<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_pos_view_employee_form" model="ir.ui.view">
        <field name="name">custom.pos.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="pos_information" string="Pos Access Rights">
                    <group>
                        <field name="edit_price"/>
                        <field name="edit_discount"/>
                        <field name="free"/>
                        <field name="loss"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
</odoo>